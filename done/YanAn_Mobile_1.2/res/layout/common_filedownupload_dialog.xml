<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

   <RelativeLayout
        android:layout_width="@dimen/common_dialog_height"
        android:layout_height="200dp"
        android:layout_centerInParent="true" >

        <Button
            android:id="@+id/butFile_downupload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_buttonHeight"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_layout_subside_pactselect_point_datalist_button"
            android:text="@string/download"
            android:textColor="@color/white"
            android:textSize="@dimen/common_title_textsize" />

        <Button
            android:id="@+id/butFile_look"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_buttonHeight"
            android:layout_alignLeft="@id/butFile_downupload"
            android:layout_below="@id/butFile_downupload"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_layout_subside_pactselect_point_datalist_button"
            android:text="@string/look"
            android:textColor="@color/white"
            android:textSize="@dimen/common_title_textsize" />

        <ProgressBar
            android:id="@+id/progress_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:max="100"
            android:visibility="invisible"
            style="@android:style/Widget.ProgressBar.Horizontal" 
            />
    </RelativeLayout>

</RelativeLayout>