<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20.0dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip" >

                <TextView
                    android:id="@+id/schedule_top_date"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal|center"
                    android:textColor="@color/deepBlue"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/schedule_btn_pre_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/oa_schedule_left_arrow_btn_selector" />

                <Button
                    android:id="@+id/schedule_btn_next_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/oa_schedule_right_arrow_btn_selector" />
            </RelativeLayout>

            <com.tongyan.yanan.common.widgets.calendar.CalendarWidget
                android:id="@+id/schedule_calendar"
                android:layout_width="fill_parent"
                android:layout_height="260.0dip"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/schedule_all_btn"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10.0dip"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/oa_all_schedule"
                    android:textColor="@color/common_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/oa_schedule_right_arrow_btn_selector" />
            </RelativeLayout>

            <View
                android:id="@+id/first_line_target"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/schedule_add_btn"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5.0dip"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/oa_add_schedule"
                    android:textColor="@color/common_color"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/oa_schedule_right_arrow_btn_selector" />
            </RelativeLayout>

            <View
                android:id="@+id/second_line_target"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </LinearLayout>
    </ScrollView>
     
</LinearLayout>