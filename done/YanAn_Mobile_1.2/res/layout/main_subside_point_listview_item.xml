<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rlHeight_layout_subside_point__listview_item_name" >

        <TextView
            android:id="@+id/txtPoint_subside_pointName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/common_black_text"
            android:textSize="@dimen/txtSize_layout_subside_pointName_value" />

            <TextView
            android:id="@+id/txtPoint_subside_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/common_black_text"
            android:layout_below="@id/txtPoint_subside_pointName"
            android:textSize="@dimen/txtSize_layout_subside_point_value" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_right_arrows_normal" />
    </RelativeLayout>

</RelativeLayout>