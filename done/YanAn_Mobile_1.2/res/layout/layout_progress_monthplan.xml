<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">
    
    <RelativeLayout 
        android:id="@+id/rlTitle_progress_monthplan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/common_title_background_color">
        <RelativeLayout 
            android:id="@+id/rlTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
           <TextView
            android:id="@+id/txtTitle_progress_monthplan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/common_title_textsize" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlAddMonth"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/rlTitle" >
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"     
            android:layout_marginRight="10dp"
            android:background="@drawable/common_add_normal" />
        
    </RelativeLayout>
    </RelativeLayout>
   
    <ListView 
        android:id="@+id/listViewProgressMonthPlan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlTitle_progress_monthplan"
        android:divider="@color/listView_line"
        android:dividerHeight="0.1dp"
        android:listSelector="@drawable/selector_common_row"/>

</RelativeLayout>
