<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/light_gray"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_title_height"
        android:background="@drawable/common_bgcolor_title" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/construct"
            android:textColor="@color/white"
            android:textSize="@dimen/common_row_size_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlLandform"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_content_height"
        android:background="@drawable/selector_common_row"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0.10dp"
            android:text="@string/landform"
            android:textColor="@color/black"
            android:textSize="@dimen/common_row_size_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_right_arrows_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_title_height"
        android:background="@drawable/common_bgcolor_title" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/construction"
            android:textColor="@color/white"
            android:textSize="@dimen/common_row_size_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCompaction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_content_height"
        android:background="@drawable/selector_common_row"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0.10dp"
            android:text="@string/compaction"
            android:textColor="@color/black"
            android:textSize="@dimen/common_row_size_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_right_arrows_normal" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/rlDrain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_content_height"
        android:background="@drawable/selector_common_row"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0.10dp"
            android:text="@string/drain"
            android:textColor="@color/black"
            android:textSize="@dimen/common_row_size_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_right_arrows_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_title_height"
        android:background="@drawable/common_bgcolor_title" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/sitePhotos"
            android:textColor="@color/white"
            android:textSize="@dimen/common_row_size_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPhotos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_content_height"
        android:background="@drawable/selector_common_row"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0.10dp"
            android:text="@string/photos"
            android:textColor="@color/black"
            android:textSize="@dimen/common_row_size_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_right_arrows_normal" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray" />

</LinearLayout>