<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/p16_contacts_list_item_parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/contacts_text_first_char_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bgcolor_title"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:textColor="@color/white"
        android:visibility="gone" >
    </TextView>

    <TextView
        android:id="@+id/contacts_text_website_name"
        android:layout_width="fill_parent"
        android:layout_height="38.0dip"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingLeft="17.0dip"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</LinearLayout>