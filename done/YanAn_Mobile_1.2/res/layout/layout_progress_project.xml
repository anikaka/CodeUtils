<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
    
   <RelativeLayout
        android:id="@+id/rlTitle_progress_project"
        android:layout_width="match_parent"
		style="@style/layout_title_style" >

        <TextView
            android:id="@+id/txtTitle_progress_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/txt_layout_progress_"
            android:textColor="@color/white"
            android:textSize="@dimen/txtSize_subside_pactselect_title" />

	  <ImageView
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentRight="true"
	      android:layout_centerVertical="true"
	      android:layout_marginRight="10dp"
	      android:background="@drawable/icon_home_normal" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlTitle_progress_project"
         android:background="@color/light_gray">

        <ListView
            android:id="@+id/listView_progress_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/listView_line"
            android:dividerHeight="0.1dp" 
            android:listSelector="@drawable/selector_common_row" />
    </RelativeLayout>

</LinearLayout>
