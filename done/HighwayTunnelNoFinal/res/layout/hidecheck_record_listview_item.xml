<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/civil_portal_row_textview_height"
        android:orientation="horizontal" 
        android:background="#e0e0e0">

        <TextView
            android:id="@+id/txtRecordMileage"
            style="@style/common_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@color/CheckResultBackgroud"
            android:gravity="center"
            android:text="里程桩号" />

        <TextView
            android:id="@+id/txtRecordCheckContent"
            style="@style/common_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="2"
            android:background="@color/CheckResultBackgroud"
            android:gravity="center"
            android:text="检查内容" />

        <TextView
            android:id="@+id/txtRecordPicNumber"
            style="@style/common_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@color/CheckResultBackgroud"
            android:gravity="center"
            android:text="照片编号" />

        <TextView
            android:id="@+id/txtRecordDescribe"
            style="@style/common_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="2"
            android:background="@color/CheckResultBackgroud"
            android:gravity="center"
            android:text="病害描述" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="@color/CheckResultBackgroud" >

            <Button
                android:id="@+id/btnRecordDel"
                android:layout_width="@dimen/civil_portal_row_btn_width"
                android:layout_height="@dimen/civil_portal_row_btn_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/delp"
                android:focusable="false" />

            <Button
                android:id="@+id/btnRecordPic"
                android:layout_width="@dimen/civil_portal_row_btn_width"
                android:layout_height="@dimen/civil_portal_row_btn_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/s"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>