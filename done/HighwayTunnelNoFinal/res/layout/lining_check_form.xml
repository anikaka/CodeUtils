        <Button
            android:id="@+id/check_form_btn1"
            android:layout_width="@dimen/check_from_btn_width"
            android:layout_height="@dimen/check_from_btn_height"
            android:layout_marginLeft="10dp"
            android:background="@color/common_sub_title_background_color"
            android:gravity="center"
            android:text="里程桩号" />

        <Button
            android:id="@+id/check_form_btn2"
            android:layout_width="@dimen/check_from_btn_width"
            android:layout_height="@dimen/check_from_btn_height"
            android:layout_marginLeft="10dp"
            android:background="@color/common_sub_title_background_color"
            android:gravity="center"
            android:text="检查内容" />

        <Button
            android:id="@+id/check_form_btn3"
            android:layout_width="@dimen/check_from_btn_width"
