            android:layout_marginLeft="10dp"
            android:background="@color/common_sub_title_background_color"
            android:gravity="center"
          	android:visibility="gone"
            android:text="病害部位" />

        <Button
            android:id="@+id/check_form_btn4"
            android:layout_width="@dimen/check_from_btn_width"
            android:layout_height="@dimen/check_from_btn_height"
            android:background="@color/common_sub_title_background_color"
            android:gravity="center"
            android:text="判断结论"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/checkfrombaseinfo"
                android:layout_width="@dimen/common_img_width"
                android:layout_height="@dimen/common_img_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/checkformbaseinfo_selector"
                android:textSize="@dimen/common_general_font_size" />
        </LinearLayout>
    </LinearLayout>
