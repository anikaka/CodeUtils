<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView 
            android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        	android:text="@string/ele_GZ"
        	android:layout_marginTop="10dp"
        />
        <LinearLayout 
          android:background="@drawable/boder_white"
          android:layout_width="1240dp"  
          android:layout_height="400dp"
          android:orientation="horizontal"
          android:layout_marginLeft="20dp"  
            >  
            <LinearLayout 
          android:background="@drawable/boder_white"
          android:layout_width="700dp"  
          android:layout_height="400dp"
          android:focusable="true"
 
android:focusableInTouchMode="true"
          android:orientation="vertical"
            
            >
            <LinearLayout
                android:layout_marginTop="10dp"
            	android:layout_width="wrap_content"
            	android:layout_height="50dp"    
                android:orientation="horizontal"
                >
            <TextView
                android:text="设备类型:"
                android:textSize="30dp"
                android:gravity="right"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
            <EditText
                android:id="@+id/ele_rc_Edit1"
                android:background="@drawable/boder_white"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"/>
            <Button
                android:textSize="20dp"
                android:text="列表选择"
                android:id="@+id/ele_rc_check_checkformBtn"
                android:layout_marginLeft="5dp"
                android:layout_width="135dp"
                android:layout_height="40dp"/>
            </LinearLayout>
             <LinearLayout
                android:layout_marginTop="10dp"
            	android:layout_width="wrap_content"
            	android:layout_height="50dp"    
                android:orientation="horizontal"
                >
            <TextView
                android:text="设备名称:"
                android:textSize="30dp"
                android:gravity="right"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
            <EditText
                android:id="@+id/ele_rc_newEd"
                android:background="@drawable/boder_white"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"/>
            <Button
                android:textSize="20dp"
                android:text="列表选择"
                android:id="@+id/ele_rc_check_newBtn"
                android:layout_marginLeft="5dp"
                android:layout_width="135dp"
                android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout 
                 android:layout_marginTop="10dp"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"    
                android:orientation="horizontal"
                >
                  <TextView
                android:text="设备位置(桩号):"
                android:textSize="30dp"
                android:gravity="right"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
            <EditText 
                android:id="@+id/ele_rc_Edit2"
                android:background="@drawable/boder_white"
                android:textSize="30dp"
                android:layout_width="320dp"
                android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout 
                 android:layout_marginTop="20dp"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"    
                android:orientation="horizontal"
                >
                  <TextView
                android:text="设备编号:"
                android:textSize="30dp"
                android:gravity="right"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
            <EditText 
                android:id="@+id/ele_rc_Edit3"
                android:background="@drawable/boder_white"
                android:textSize="30dp"
                android:layout_width="320dp"
                android:layout_height="40dp"/>
            </LinearLayout>
            	<LinearLayout 
                 android:layout_marginTop="30dp"
            	android:layout_width="600dp"
            	android:layout_height="wrap_content"    
                android:orientation="horizontal"
                >
                  <TextView
                android:text="设备状态:"
                android:textSize="30dp"
                android:gravity="right"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
           	<RadioGroup 
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:orientation="horizontal">
           	    <RadioButton 
           	        android:checked="true"
	           	    android:text="正常"
	           	    android:id="@+id/ele_rc_check_rb1"
           	        android:layout_width="150dp"
           	        android:layout_height="40dp"/>
				           	    <RadioButton 
	           	    android:text="异常"
	           	    android:id="@+id/ele_rc_check_rb2"
           	        android:layout_width="150dp"
           	        android:layout_height="40dp"/>
           	    	    
           	</RadioGroup>
            </LinearLayout>
            <LinearLayout 
                 android:layout_marginTop="30dp"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"    
                android:orientation="horizontal"
                >
                  
            <Button 
             
                android:textSize="20dp"
                android:text="提交"
               android:id="@+id/ele_rc_check_commitBtn"
                android:gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_width="420dp"
                android:layout_height="40dp"/>
            </LinearLayout>
            
         </LinearLayout>
       
            
           <LinearLayout 
               android:layout_marginTop="40dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
           
               <LinearLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                android:text="设备故障:"
                android:textSize="25dp"
                android:gravity="right"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
                  <EditText 
                android:id="@+id/ele_rc_Edit5"
                android:background="@drawable/boder_white"
                android:textSize="30dp"
                android:text="无"
                android:gravity="left"
                android:layout_width="310dp"
                android:layout_height="160dp"/>
                   
                   
           </LinearLayout>
           <LinearLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal">
               <TextView
                android:text="设备故障注意事项:"
                android:textSize="25dp"
                android:gravity="right"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
                  <EditText 
                android:id="@+id/ele_rc_Edit6"
                android:background="@drawable/boder_white"
                android:textSize="30dp"
                android:text="无"
                android:gravity="left"
                android:layout_width="310dp"
                android:layout_height="160dp"/>
                   
                   
           </LinearLayout>
               
               
           </LinearLayout>
         
           
           
        </LinearLayout>
        
        
         
           
        
        
   </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
    <TextView 
               android:textSize="20dp"
				android:layout_marginLeft="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="检查结果"/>
        <Button
               android:textSize="20dp"
               android:id="@+id/ele_check_form"
				android:layout_marginLeft="1050dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
             	android:gravity="center"
               android:text="检查记录表"/>
    </LinearLayout>
     <TableLayout
         android:layout_marginLeft="20dp"
        android:layout_width="1240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_white" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="故障日" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="设备名称" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="设备位置(桩号)" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="设备编号" />
			<TextView
                style="@style/Civil_PorTheme"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="设备状态" />
            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="设备故障" />
             <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="故障注意事项" />
              <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="删除" />
              
        </TableRow>
    </TableLayout>
    <ListView
          android:divider="@null"
        android:layout_marginLeft="20dp"
        android:id="@+id/ele_rc_check_list"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
		
</LinearLayout>
