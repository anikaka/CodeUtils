<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee" 
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/Check_content" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/BH_position" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="400dp"
                android:text="@string/P_level" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/Civil_portal_listview1"
            android:layout_width="300dp"
            android:layout_height="380dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/boder_white"
            android:choiceMode="singleChoice" >
        </ListView>

        <ListView
            android:id="@+id/Civil_portal_listview2"
            android:layout_width="300dp"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/boder_white"
            android:choiceMode="singleChoice" >
        </ListView>

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="380dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/boder_white"
            android:orientation="vertical" >
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    
		    android:orientation="horizontal">
   			<LinearLayout 
   			    android:layout_width="wrap_content"
   			    android:layout_height="wrap_content"
   			    android:orientation="vertical">
					
                    <Button
                        android:id="@+id/Civil_Config_Level_List_Btn1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textSize="30dp" 
                        android:visibility="gone"
                        android:text="S"/>
                    
                    <Button
                        android:id="@+id/Civil_Config_Level_List_Btn2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textSize="30dp" 
                        android:text="B"/>
                     <Button
                        android:id="@+id/Civil_Config_Level_List_Btn3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:textSize="30dp" 
                        android:text="A"/>
                     </LinearLayout>

   				<LinearLayout 
   				    android:layout_width="300dp"
   				    android:layout_height="300dp"
   				    android:orientation="vertical">
                    <RadioGroup  android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Civil_RadioGp"
                        >
                    <RadioButton
                        android:checked="true"
                         android:visibility="gone"
                        android:id="@+id/Civil_Config_Level_List_Rbtn1"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:singleLine="true"
                        android:layout_marginTop="30dp"
                        	android:maxLength="300"
                        	android:text="                    "
                        android:layout_gravity="center_vertical" />
            


                    <RadioButton
                                                android:singleLine="true"
                        android:id="@+id/Civil_Config_Level_List_Rbtn2"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        	android:maxLength="300"
                        	android:text="                    "
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center_vertical" />
              
  
                   

                    <RadioButton
                        android:singleLine="true"
                        android:id="@+id/Civil_Config_Level_List_Rbtn3"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                      	android:maxLength="300"
                      	android:text="                    "
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center_vertical" />
              </RadioGroup>
              </LinearLayout>
         </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/Civil_Por_PhotoBtn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="130dp"
                    android:text="@string/photopick" />

                <Button
                    android:id="@+id/Civil_Por_CommitBtn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="提交" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="检查结果" />

        <Button
            android:id="@+id/to_check_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1000dp"
            android:layout_marginTop="30dp"
            android:text="@string/record_form" />
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_white" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="进出口" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="660dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="状态描述" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="判断结论" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="照片编号" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/boder_white"
                android:text="删除" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/Civil_Por_CheckResult_Listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>