<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout 
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:orientation="horizontal">
          
          <LinearLayout 
          android:layout_height="wrap_content"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="10dp">
          <TextView
              android:textSize="@dimen/common_general_font_size"
            android:id="@+id/check_form_text1"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="40dp"  
            android:text="隧道名称："  />
          <TextView
              android:textSize="@dimen/common_general_font_size"
            android:id="@+id/check_form_text2"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="40dp"  
            android:text="隧道编号: "  />
          <TextView
              android:textSize="@dimen/common_general_font_size"
            android:id="@+id/check_form_text3"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="40dp"  
            android:text="养护机构："  />
          <TextView
              android:textSize="@dimen/common_general_font_size"
            android:id="@+id/check_form_text4"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="40dp"  
            android:text="检查类别："  />
          <TextView
              android:textSize="@dimen/common_general_font_size"
            android:id="@+id/check_form_text5"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="40dp"  
            android:text="检查组长："  />
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/check_form_text6"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="路线名称："
                android:textSize="@dimen/common_general_font_size" />

            <TextView
                android:id="@+id/check_form_text7"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="路线编号："
                android:textSize="@dimen/common_general_font_size" />

            <TextView
                android:id="@+id/check_form_text8"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="检查日期："
                android:textSize="@dimen/common_general_font_size" />

            <TextView
                android:id="@+id/check_form_text9"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="检查类型："
                android:textSize="@dimen/common_general_font_size" />

            <TextView
                android:id="@+id/check_form_text10"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="检查成员："
                android:textSize="@dimen/common_general_font_size" />
        </LinearLayout>
          
          </LinearLayout>
    
    
    
</LinearLayout>
