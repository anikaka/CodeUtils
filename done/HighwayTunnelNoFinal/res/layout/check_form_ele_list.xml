<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- 机电日常检查表 listview 适配格式 -->

        <TextView
            android:id="@+id/check_form_CheckResultT1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />

        <TextView
            android:id="@+id/check_form_CheckResultT2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />

        <TextView
            android:id="@+id/check_form_CheckResultT3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />

        <TextView
            android:id="@+id/check_form_CheckResultT4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />

        <TextView
            android:id="@+id/check_form_CheckResultT5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />

        <TextView
            android:id="@+id/check_form_CheckResultT6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />

        <TextView
            android:id="@+id/check_form_CheckResultT7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>