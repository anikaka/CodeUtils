        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="检查结果"
            android:textColor="#034867"
            android:textSize="@dimen/common_general_font_size" />

        <Button
            android:id="@+id/to_check_form"
            android:layout_width="@dimen/common_img_width"
            android:layout_height="@dimen/common_img_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/common_general_font_size"
            android:background="@drawable/checkform1" />
 <!-- android:background="@drawable/checkform1" -->
 <!--   android:text="检 查 记 录 表" -->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/CheckResultBackgroud" >

        <!--
             <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        -->

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="1"
            android:text="进出口"
            android:textSize="@dimen/common_general_font_size" />

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="1"
            android:text="检查内容"
            android:textSize="@dimen/common_general_font_size" />

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="2"
            android:text="状态描述"
            android:textSize="@dimen/common_general_font_size" />

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="1"
            android:text="判断结论"
            android:textSize="@dimen/common_general_font_size"
            android:visibility="gone" />

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="1"
            android:text="照片编号"
            android:textSize="@dimen/common_general_font_size" />

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="2"
            android:text="病害描述"
            android:textSize="@dimen/common_general_font_size" />

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="1"
            android:text="操作"
            android:textSize="@dimen/common_general_font_size" />
        <!-- </TableRow> -->
    </LinearLayout>

    <ListView
        android:id="@+id/Civil_Por_CheckResult_Listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" 
       android:cacheColorHint="#00000000"/>

