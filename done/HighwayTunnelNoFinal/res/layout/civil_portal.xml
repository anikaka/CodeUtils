<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 洞口 洞门显示界面 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="@dimen/civil_portal_listview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/Check_content"
            android:textColor="@color/tjbt"
            android:textSize="@dimen/common_general_font_size" />

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="@dimen/civil_portal_listview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/mileage"
            android:textColor="@color/tjbt"
            android:textSize="@dimen/common_general_font_size" />

        <TextView
            style="@style/Civil_PorTheme"
            android:layout_width="@dimen/civil_portal_listview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/P_level"
            android:textColor="@color/tjbt"
            android:textSize="@dimen/common_general_font_size" />

        <RadioGroup
            android:id="@+id/Civil_RadioGp_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/Civil_Config_HAVA_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:text="有"
                android:textSize="@dimen/common_general_font_size" />

            <RadioButton
                android:id="@+id/Civil_Config_HAVA_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:checked="true"
                android:text="无"
                android:textSize="@dimen/common_general_font_size" />
        </RadioGroup>
    </LinearLayout>

