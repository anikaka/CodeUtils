<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Lining" >

    <LinearLayout
        android:id="@+id/lining_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="@dimen/civil_portal_listview_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/Check_content"
                android:textColor="@color/tjbt"
                android:textSize="@dimen/common_general_font_size" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="@dimen/civil_portal_listview_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="里程桩号"
                android:textColor="@color/tjbt"
                android:textSize="@dimen/common_general_font_size" />

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="@dimen/civil_portal_listview_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/P_level"
                android:textColor="@color/tjbt"
                android:textSize="@dimen/common_general_font_size" />

            <RadioGroup
                android:id="@+id/Civil_RadioGp_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/civil_portal_row_textview_height"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/Civil_Config_HAVA_1"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:singleLine="true"
                    android:text="有"
                    android:textSize="@dimen/common_general_font_size" />

                <RadioButton
                    android:id="@+id/Civil_Config_HAVA_2"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="无"
                    android:textSize="@dimen/common_general_font_size" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/civil_portal_info_height"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/civil_portal_listview_width"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/Civil_lining_listview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/listviewBackgroud"
                    android:choiceMode="singleChoice" >
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/civil_portal_listview_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/lining_SX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Zk"
                        android:textSize="@dimen/common_general_font_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/Civil_lining_Edit1"
                            android:layout_width="@dimen/civil_portal_edittext_width"
                            android:layout_height="wrap_content"
                            android:background="@drawable/boder_white"
                            android:textSize="@dimen/common_general_font_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textSize="@dimen/common_general_font_size" />

                        <EditText
                            android:id="@+id/Civil_lining_Edit2"
                            android:layout_width="@dimen/civil_portal_edittext_width"
                            android:layout_height="wrap_content"
                            android:background="@drawable/boder_white"
                            android:textSize="@dimen/common_general_font_size"
                            android:width="120dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="病害位置"
                    android:textSize="@dimen/common_general_font_size" />

                <ListView
                    android:id="@+id/Civil_lining_listview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/listviewBackgroud" >
                </ListView>
            </LinearLayout>
			
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@color/listviewBackgroud"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RadioGroup
                            android:id="@+id/Civil_RadioGp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                        
                         	<RadioButton
                                android:id="@+id/Civil_Config_Level_List_Rbtn01"
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/civil_portal_radioButton_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/civil_portal_radioButton_margintop"
                                android:textSize="@dimen/common_small_font_size" />
                            <!-- android:id="@+id/Civil_Config_Level_List_Rbtn1" -->
                            
                            <RadioButton
                                android:id="@+id/Civil_Config_Level_List_Rbtn02"
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/civil_portal_radioButton_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/civil_portal_radioButton_margintop"
                                android:textSize="@dimen/common_small_font_size" />

                            <RadioButton
                                android:id="@+id/Civil_Config_Level_List_Rbtn03"
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/civil_portal_radioButton_height"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/civil_portal_radioButton_margintop"
                                android:textSize="@dimen/common_small_font_size" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/civil_BZ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="病害描述："
                        android:textSize="@dimen/common_small_font_size" />

                    <EditText
                        android:id="@+id/civil_BZ_Edit"
                        android:layout_width="@dimen/civil_BZ_Edit_edittext_width"
                        android:layout_height="@dimen/civil_BZ_Edit_edittext_height"
                        android:background="@drawable/boder_white"
                        android:gravity="top"
                        android:textSize="@dimen/common_small_font_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|bottom"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/Civil_lining_CommitBtn"
                        android:layout_width="@dimen/common_img_width"
                        android:layout_height="@dimen/common_img_height"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tj_bt_h"
                        android:textSize="@dimen/common_general_font_size" />
                    <!-- android:background="@drawable/tj_bt_h" -->
                    <!-- android:text="提	交" -->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/Civil_PorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="检查结果"
                android:textColor="@color/tjbt"
                android:textSize="@dimen/common_general_font_size" />

            <Button
                android:id="@+id/Civil_lining_CheckRecordBtn"
                android:layout_width="@dimen/common_img_width"
                android:layout_height="@dimen/common_img_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/checkform1"
                android:textSize="@dimen/common_general_font_size" />
            <!-- android:text="检 查 记 录 表" -->
            <!-- android:background="@drawable/checkform1" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/Civil_lining_LiningBHphotoBtn"
                    android:layout_width="@dimen/common_img_width"
                    android:layout_height="@dimen/common_img_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cjbhzbt"
                    android:textSize="@dimen/common_general_font_size" />
                <!-- android:background="@drawable/cjbhzbt" -->
                <!-- android:text="衬 砌 病 害 展 布 图" -->

                <Button
                    android:id="@+id/Civil_lining_liningRecordBtn"
                    android:layout_width="@dimen/common_img_width"
                    android:layout_height="@dimen/common_img_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cjbhlb_sele"
                    android:textSize="@dimen/common_general_font_size" />
                <!-- android:background="@drawable/cjbhlb_sele" -->
                <!-- android:text="衬 砌 病 害 记 录 表" -->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/CheckResultBackgroud"
                android:orientation="horizontal" >

                <TextView
                    style="@style/Civil_PorTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="里程桩号"
                    android:textSize="@dimen/common_general_font_size" />

                <TextView
                    style="@style/Civil_PorTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="病害类型"
                    android:textSize="@dimen/common_general_font_size" />

                <TextView
                    style="@style/Civil_PorTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="病害部位"
                    android:textSize="@dimen/common_general_font_size" />

                <TextView
                    style="@style/Civil_PorTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="状态描述"
                    android:textSize="@dimen/common_general_font_size" />

                <TextView
                    style="@style/Civil_PorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="判断结论"
                    android:textSize="@dimen/common_general_font_size"
                    android:visibility="gone" />

                <TextView
                    style="@style/Civil_PorTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="照片编号"
                    android:textSize="@dimen/common_general_font_size" />

                <TextView
                    style="@style/Civil_PorTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="病害描述"
                    android:textSize="@dimen/common_general_font_size" />

                <TextView
                    style="@style/Civil_PorTheme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="操作"
                    android:textSize="@dimen/common_general_font_size" />
            </LinearLayout>

            <ListView
                android:id="@+id/Civil_lining_CheckResult_Listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="@null" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BHMain_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white"
        android:orientation="vertical"
        android:paddingBottom="0dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/bhleft_layout"
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:text="@string/left_tag"
                    android:textSize="30dip" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ListView
                        android:id="@+id/ListBH"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:cacheColorHint="@drawable/trancolor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/llining_height"
                android:background="@drawable/border"
                android:gravity="top"
                android:orientation="vertical" >

                <com.TY.bhgis.Controls.TopView
                    android:id="@+id/topView"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:gravity="top" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="@drawable/border_white" >
                </TextView>

                <com.TY.bhgis.Controls.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.TY.bhgis.Controls.BottomView
                    android:id="@+id/bottomView"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:gravity="bottom" /> 
                     
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maptoolbar"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pan"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/liningbuttonseletor"
                android:text="@string/pan" >
            </Button>

            <Button
                android:id="@+id/selectBH"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/liningbuttonseletor"
                android:text="@string/select" >
            </Button>

            <Button
                android:id="@+id/deleteBH"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/liningbuttonseletor"
                android:text="@string/delete" >
            </Button>

            <Button
                android:id="@+id/ringto_button"
                android:layout_width="10dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/liningbuttonseletor"
                android:text="@string/ringto" >
            </Button>

            <Button
                android:id="@+id/bhback_button"
                android:layout_width="10dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/liningbuttonseletor"
                android:text="@string/back" >
            </Button>

            <Button
                android:id="@+id/bhcheckform_button"
                android:layout_width="10dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/liningbuttonseletor"
                android:text="衬砌病害记录表" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>