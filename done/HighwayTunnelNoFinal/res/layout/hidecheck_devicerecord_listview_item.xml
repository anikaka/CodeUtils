<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants">
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="@dimen/civil_portal_row_textview_height"
    android:orientation="horizontal">
    
    <TextView
            style="@style/common_text"
            android:id="@+id/txtDeviceRecordItemDeviceName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设备名称" />

        <TextView
            style="@style/common_text"
            android:id="@+id/txtDeviceRecordItemDeviceNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="数量" />

        <TextView
            style="@style/common_text"
            android:id="@+id/txtDeviceRecordItemDeviceCheckContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="检查内容" />

<!--         <TextView
            style="@style/common_text"
            android:id="@+id/txtDeviceRecordItemDeviceLoaction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="工程部位" />

        <TextView
            style="@style/common_text"
            android:id="@+id/txtDeviceRecordItemAcceptanceRecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="验收记录" />
 -->
        <TextView
            style="@style/common_text"
            android:id="@+id/txtDeviceRecordItemOperator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作人" />
        
<!--         <TextView
            style="@style/common_text"
            android:id="@+id/txtDeviceRecordPiceNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="照片编号" /> -->

        <TextView
            style="@style/common_text"
            android:id="@+id/txtDeviceRecordRemark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"/>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btnDeviceRecordDel"
                android:layout_width="@dimen/civil_portal_row_btn_width"
                android:layout_height="@dimen/civil_portal_row_btn_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/delp"/>

            <Button
                android:id="@+id/btnDeviceRecordPic"
                android:layout_width="@dimen/civil_portal_row_btn_width"
                android:layout_height="@dimen/civil_portal_row_btn_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/s" />

        </LinearLayout>
    
</LinearLayout>

</LinearLayout>
