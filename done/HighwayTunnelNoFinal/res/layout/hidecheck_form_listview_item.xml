<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
 	<TextView 
 	    android:id="@+id/textViewTunnelName"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_marginLeft="10dp"
 	    android:layout_marginTop="10dp"
 	    android:textColor="@color/black_color"
 	    android:textSize="@dimen/common_general_font_size"/>
    
 	<TextView 
 	    android:id="@+id/textViewMileage"
 	    android:layout_width="match_parent"
 	   	android:layout_height="wrap_content"
 	   	android:layout_below="@id/textViewTunnelName"
 	   	android:layout_alignLeft="@id/textViewTunnelName"
 	   	android:layout_marginTop="10dp"
 	   	android:textColor="@color/black_color"
 	   	android:textSize="@dimen/common_general_font_size"	/>
 	<TextView 
 	    android:id="@+id/textViewDate"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_below="@id/textViewMileage"
 	    android:layout_alignLeft="@id/textViewMileage"
 	    android:layout_marginTop="10dp"
 	    android:textColor="@color/black_color"
 	    android:textSize="@dimen/common_general_font_size"/>
 	<TextView 
 	    android:id="@+id/checkFormUpdateState"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_alignParentRight="true"
 	    android:layout_centerVertical="true"
 	    android:layout_marginRight="20dp"/>
 	<View 
 	    android:layout_width="match_parent"
 	    android:layout_height="10dp"
 	    android:layout_below="@id/textViewDate"/>
 	
   </RelativeLayout>
