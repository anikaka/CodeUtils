<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >



        <!-- 衬砌界面listview适配 -->
        
        <TextView
        android:id="@+id/Civil_lining_CheckResultT1"
        android:layout_width="0dp"
        android:layout_height="@dimen/civil_portal_row_textview_height"
        android:layout_weight="1"
        android:background="@drawable/setbar"
        android:gravity="center"
        android:textSize="@dimen/common_small_font_size" />

    <TextView
        android:id="@+id/Civil_lining_CheckResultT2"
        android:layout_width="0dp"
        android:layout_height="@dimen/civil_portal_row_textview_height"
        android:layout_weight="1"
        android:background="@drawable/setbar"
        android:gravity="center"
        android:textSize="@dimen/common_small_font_size" />

    <TextView
        android:id="@+id/Civil_lining_CheckResultT3"
        android:layout_width="0dp"
        android:layout_height="@dimen/civil_portal_row_textview_height"
        android:layout_weight="1"
        android:background="@drawable/setbar"
        android:gravity="center"
        android:textSize="@dimen/common_small_font_size" />

        <TextView
            android:id="@+id/Civil_lining_CheckResultT4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
             android:layout_weight="2"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />

        <TextView
            android:id="@+id/Civil_lining_CheckResultT5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/Civil_lining_CheckResultT6"
            android:layout_width="0dp"
            android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="1"
            android:textSize="@dimen/common_small_font_size"     
            android:background="@drawable/setbar"
            android:gravity="center" />

        <TextView
            android:id="@+id/Civil_lining_CheckResultT7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
             android:layout_weight="2"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
      		 android:layout_height="@dimen/civil_portal_row_textview_height"
            android:layout_weight="1"
            android:textSize="@dimen/common_small_font_size"
            android:background="@drawable/setbar" >

            <Button
                android:id="@+id/Civil_lining_CheckResultBtn"
         	   android:layout_width="@dimen/civil_portal_row_btn_width"
          	  android:layout_height="@dimen/civil_portal_row_btn_height"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/delp" />

            <Button
                android:id="@+id/Civil_lining_PhotoBtn"
           		 android:layout_width="@dimen/civil_portal_row_btn_width"
            	android:layout_height="@dimen/civil_portal_row_btn_height"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/s" />
        </LinearLayout>

</LinearLayout>