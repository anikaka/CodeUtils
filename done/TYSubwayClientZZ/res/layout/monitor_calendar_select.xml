<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <RelativeLayout 
            android:id="@+id/calendar_previous"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/date_show_text"
            android:clickable="true"
            android:layout_marginRight="30dp"
            >
            <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/monitor_calendar_previous_btn"
            android:layout_centerInParent="true"
            />
            
        </RelativeLayout>
        
        <TextView 
            android:id="@+id/date_show_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            />
        <RelativeLayout 
            android:id="@+id/calendar_next"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/date_show_text"
            android:clickable="true"
            android:layout_marginLeft="30dp"
            >
            <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/monitor_calendar_next_btn"
            android:layout_centerInParent="true"
            />
            
        </RelativeLayout>
    </RelativeLayout>
    
    <com.tongyan.zhengzhou.common.widgets.calendar.CalendarWidget
        android:id="@+id/calendar_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
	<ListView 
	    android:id="@+id/monitor_checking_points_list"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:divider="@color/gray"
    	android:dividerHeight="0.1dip"
    	android:cacheColorHint="@null"
    	android:background="@color/white"
	   />
</LinearLayout>
