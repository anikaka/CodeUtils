<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants"
    android:background="@color/detail_menu_normal_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/check_task_object_height"
        android:background="@color/detail_menu_normal_bg"
        android:gravity="center_vertical" 
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="    检查方式："
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/check_way_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_jiao" />
     
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/misty_gray"/>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="@dimen/check_task_object_height"
    	android:gravity="center_vertical"
    	android:background="@color/detail_menu_normal_bg">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="    检查类型：" 
	        android:textColor="@color/black"
	        />
        
	    <Spinner
            android:id="@+id/check_type_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_jiao" />
	    
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/misty_gray"/>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="@dimen/check_task_object_height"
    	android:gravity="center_vertical"
    	android:background="@color/detail_menu_normal_bg">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="    病害类型：" 
	        android:textColor="@color/black"
	        />
        
	    <Spinner
            android:id="@+id/damage_type_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_jiao" />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/misty_gray"/>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="@dimen/check_task_object_height"
    	android:gravity="center_vertical"
    	android:background="@color/detail_menu_normal_bg">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="    病害形式：" 
	        android:textColor="@color/black"
	        />
        
	    <TextView 
	        android:id="@+id/base_object_item_level"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="病害个数"
	        />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/misty_gray"/>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="@dimen/check_task_object_height"
    	android:gravity="center_vertical"
    	android:background="@color/detail_menu_normal_bg">
        
        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="    数据对比" 
	        android:textColor="@color/black"
	        />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="@dimen/check_task_object_height"
    	android:gravity="center_vertical"
    	android:background="@color/white">
        
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="    " 
	        />
	    
	    <CheckBox
	        android:id="@+id/check_task_object_checkBox1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" 第一组：" 
	        android:textColor="@color/black"
	        style="@style/myCheckBox"
	        android:focusable="false"
	        />
	    
	    <TextView 
	        android:id="@+id/check_task_object_time1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="2015年01月02日" 
	        android:textColor="@color/black"
	        android:background="@drawable/common_jiao"
	        android:gravity="center_vertical"
	        />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="@dimen/check_task_object_height"
    	android:gravity="center_vertical"
    	android:background="@color/white">
        
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="    " 
	        />
	    
	    <CheckBox
	        android:id="@+id/check_task_object_checkBox2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" 第二组：" 
	        android:textColor="@color/black"
	        style="@style/myCheckBox"
	        android:focusable="false"
	        />
	    
	    <TextView 
	        android:id="@+id/check_task_object_time2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="2015年01月05日" 
	        android:textColor="@color/black"
	        android:background="@drawable/common_jiao"
	        android:gravity="center_vertical"
	        />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="@dimen/check_task_object_height"
    	android:gravity="center_vertical"
    	android:background="@color/white">
        
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="    " 
	        />
	    
	    <CheckBox
	        android:id="@+id/check_task_object_checkBox3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" 第三组："  
	        android:textColor="@color/black"
	        style="@style/myCheckBox"
	        android:focusable="false"
	        />
	    
	    <TextView 
	        android:id="@+id/check_task_object_time3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="2015年01月05日" 
	        android:textColor="@color/black"
	        android:background="@drawable/common_jiao"
	        android:gravity="center_vertical"
	        />
    </LinearLayout>

</LinearLayout>