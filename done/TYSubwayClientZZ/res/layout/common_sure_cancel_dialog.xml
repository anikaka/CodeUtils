<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >
      <TextView 
         android:id="@+id/prompt_title"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
         android:background="@drawable/common_dialog_top_bg"
         android:text="提示"
         android:gravity="center"
         android:textColor="@color/black"
        />
    <LinearLayout
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_content_bg"
     >
   
    <TextView 
         android:id="@+id/prompt_content"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
         android:padding="10dp"
         android:textColor="@color/black"
        />
    <RelativeLayout
        android:id="@+id/common_sure_cancel_RelatLayout"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        >
       
        <View 
        android:id="@+id/item_mid_target"
        android:layout_width="0dp"
    	android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        />
        
    <Button
        android:id="@+id/sure_btn"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:text="确定"
    	android:background="@drawable/common_click_button_selector"
    	android:layout_toLeftOf="@+id/item_mid_target"
    	android:layout_marginRight="3dp"
    	android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:text="取消"
    	android:background="@drawable/common_click_button_selector"
    	android:layout_toRightOf="@+id/item_mid_target"
    	android:layout_marginLeft="3dp"
    	android:layout_marginRight="5dp"
        />
    </RelativeLayout>
    <View 
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_marginTop="10dp"
        />
    </LinearLayout>
</LinearLayout>
